#!/bin/bash
logfile=/var/log/reposman.log
( 
flock -s 200 
echo >> $logfile
/var/www/code/reposman/reposman-soundsoftware.rb \
	-s /var/hg \
	-r https://code.soundsoftware.ac.uk/ \
	-k INSERT_API_KEY_HERE \
	--http-user=user \
	--http-pass=password \
	-o www-data \
	-g code \
	-c "/var/www/code/reposman/run-hginit.sh" \
	--scm=Mercurial \
	>> $logfile 2>&1
)200>>$logfile
