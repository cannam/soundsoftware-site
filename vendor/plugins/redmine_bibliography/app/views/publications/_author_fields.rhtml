<div class="author_fields">
  <% fields_for :authors do |author_form| -%>
    <%= author_form.label :name, l("name") %> <%= author_form.text_field :name %>            
    <%= author_form.hidden_field :_destroy %>
    
    <%= link_to_function "Remove", "remove_author(this)" %>  
  <% end -%>
</div>  
