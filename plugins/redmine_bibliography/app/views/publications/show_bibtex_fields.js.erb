fields = <%= @fields.to_json.html_safe -%>;

$.each($(".bibtex"), function( key, value ) {
    $this = $(this);

    input_id = $this.children('input').attr('id');
    name = input_id.split('_')[4];

    if ($.inArray(name, fields) !== -1){
        $this.show();
    }
    else{
        $this.hide();
    }
});